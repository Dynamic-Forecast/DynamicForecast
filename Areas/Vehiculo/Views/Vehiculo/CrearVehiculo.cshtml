@model DynamicForecast.Areas.Vehiculo.Models.DT_Vehiculo
<div class="row">
    <div class="col-md-12">
        <form asp-action="CrearVehiculo" method="post" enctype="multipart/form-data">

            @{if (ViewBag.Error != "")
                {
                    <div class="text-center text-danger">
                        @ViewBag.Error
                        <hr />
                    </div>
                }
            }
            <div class="text-bold text-center h4">Datos para la Creación del Vehículo</div>
            <br />
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="control-label">Placas</label>
                    <input asp-for="CodPlacas" maxlength="20" class="form-control form-control-sm" required />
                    <span asp-validation-for="CodPlacas" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label">Modelo</label>
                    <input asp-for="Modelo" maxlength="250" class="form-control form-control-sm" required />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Marca</label>
                    <input asp-for="MarcaEmpresa" maxlength="250" class="form-control form-control-sm" required />
                    <span asp-validation-for="MarcaEmpresa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="control-label">Configuración</label>
                    <select id="selecCertificados" asp-for="CodConfiguracion" class="form-control form-control-sm">
                        <option selected disabled value="">Seleccione la Configuración</option>
                        <option value="2">Camión Rígido de 2 Ejes</option>
                        <option value="3S3">Tractocamión de 3 ejes Semiremolque de 3 Ejes</option>
                        <option value="3S2">Tractocamión de 3 ejes Semiremolque de 2 Ejes</option>
                        <option value="3">Camión Rígido de 3 ejes</option>
                        <option value="CA">Tractocamión de 2 ejes Semiremolque de 2 Ejes</option>
                        <option value="2S3">Tractocamión de 2 ejes Semiremolque de 3 Ejes</option>
                        <option value="4">Camión Rígido de 4 ejes</option>
                        <option value="3S4">Tractocamión de 3 ejes Semiremolque de más de 4 ejes</option>
                        <option value="251">Tractocamión de 2 ejes Semiremolque de 1 Eje</option>
                    </select>

                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Naturaleza</label>
                    <select id="selecCertificados" asp-for="NaturalezaCarga" class="form-control form-control-sm">
                        <option selected disabled value="">Seleccione la Naturaleza de la Carga</option>
                        <option value="NAT-TIPO1">Carga Normal</option>
                        <option value="NAT-TIPO2">Carga Peligrosa</option>
                        <option value="NAT-TIPO3">Refrigerada</option>
                        <option value="NAT-TIPO4">Desechos Peligrosos</option>
                        <option value="NAT-TIPO5">Carga Extradimensionada</option>
                        <option value="NAT-TIPO6">Semovientes</option>
                        <option value="NAT-TIPO7">Carga Extrapesada</option>
                    </select>

                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Estado Mecánico</label>
                    <select id="selecCertificados" asp-for="EstadoMecanico" class="form-control form-control-sm">
                        <option selected disabled value="">Seleccione el Estado Macánico</option>
                        <option value="EM-1">Buen Estado</option>
                        <option value="EM-2">Próximo a Mantenieminto</option>
                        <option value="EM-3">Accidentado</option>
                        <option value="EM-4">En Taller</option>
                        <option value="EM-5">Desechado</option>
                    </select>

                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="control-label">Estado Legal</label>
                    <select id="selecCertificados" asp-for="EstadoLegal" class="form-control form-control-sm">
                        <option selected disabled value="">Seleccione el Estado Legal</option>
                        <option value="EL-1">Sin Novedades</option>
                        <option value="EL-3">Con Multa(s)</option>
                        <option value="EL-4">En Patios</option>
                        <option value="EL-5">En Revisión de Autoridades</option>
                        <option value="EL-6">En Denuncia por Robo</option>
                    </select>

                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Descripción</label>
                    <textarea asp-for="Descripcion" maxlength="250" class="form-control form-control-sm" required></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Capacidad (Galones - Toneladas)</label>
                    <input asp-for="Capacidad" type="number" class="form-control form-control-sm" required>
                    <span asp-validation-for="Capacidad" class="text-danger"></span>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="control-label">Volumen (Métros Cúbicos)</label>
                    <input asp-for="CapacidadVolumen" type="number" class="form-control form-control-sm" required>
                    <span asp-validation-for="CapacidadVolumen" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Municipio Base</label>
                    <select id="selecViajes" asp-for="CodMunicipioBase" class="form-control form-control-sm" required>
                        <option selected disabled value="">Seleccione el Municipio Base del Vehículo</option>
                        <option value="Bogotá">Bogotá</option>
                        <option value="Cartagena">Cartagena</option>
                        <option value="Buenaventura">Buenaventura</option>
                        <option value="Barranquilla">Barranquilla</option>
                        <option value="Medellin">Medellin</option>
                        <option value="Yumbo Valle">Yumbo Valle</option>
                        <option value="Cali Valle">Cali Valle</option>
                        <option value="Funza Cundinamarca">Funza Cundinamarca</option>
                        <option value="Itagui">Itagui</option>
                        <option value="Tocancipá">Tocancipá</option>
                    </select>
                    <span asp-validation-for="CodMunicipioBase" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Departamento Base</label>
                    <select id="selecViajes" asp-for="CodDepartamentoBase" class="form-control form-control-sm" required>
                        <option selected disabled value="">Seleccione el Departamento Base del Vehículo</option>
                        <option value="Valle del Cauca">Valle del Cauca</option>
                        <option value="Antioquia">Antioquia</option>
                        <option value="Cundinamarca">Cundinamarca</option>
                        <option value="Bogotá DC">Bogotá DC</option>
                        <option value="Atlántico">Atlántico</option>
                        <option value="Bolívar">Bolívar</option>
                        <option value="Santander">Santander</option>
                        <option value="Meta">Meta</option>
                        <option value="Risaralda">Risaralda</option>
                        <option value="Boyacá">Boyacá</option>
                    </select>
                    <span asp-validation-for="CodDepartamentoBase" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary"><t id="txtBtnCrear">Crear Vehiculo</t></button>
            </div>
        </form>
    </div>
</div>