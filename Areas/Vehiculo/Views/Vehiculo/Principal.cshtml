@model IEnumerable<DynamicForecast.Areas.Vehiculo.Models.DT_Vehiculo>

<div class="content-heading">
    Vehiculos
    <div class="ml-auto">
        <a class="btn btn-primary" href="#" onclick="showInPopup('@Url.Action("CrearVehiculo", "Vehiculo", Context.Request.Scheme)', 'Nuevo Vehículo')">
            Nuevo Vehículo &nbsp;<i class="fa fa-car-alt " title="Nuevo Vehículo"></i>
        </a>
    </div>
</div>
@if (@ViewBag.VehiculoCreado)
{
    <div class="card-body">
        <div class="card border-info mb-12 text-center" >
            <div class="card-body text-info">
                <h4 class="card-title">VEHÍCULO CREADO CON ÉXITO </h4>

            </div>
        </div>
    </div>
}
@if (@ViewBag.VehiculoEliminado)
{
    <div class="card border-danger text-center" >
        <div class="card-header text-center">
            <h4 class="card-title">VEHÍCULO ELIMINADO CON ÉXITO </h4>

        </div>
    </div>
}
@if (@ViewBag.Error != "")
{
    <div class="card-body bg-transparent border-danger">
        <div class="card border-info mb-12 text-center" >
            <div class="card-body text">
                <h4 class="card-title">ERROR: <b> [ @ViewBag.Error ] </b> </h4>
            </div>
        </div>
    </div>
}
<div class="card card-default">
    <div class="form-group col-md-12">
        <br />
        <h4 class="text-bold text-center">Vehículos Activos en el Sistema</h4>
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-body">
                    @{if (Model.First() != null)
                        {

                            <table class="table table-striped my-4 w-100 table-responsive-sm table-bordered" id="datatable22">
                                <thead>
                                    <tr>
                                        <th class="text-center"> Eliminar Vehiculo</th>
                                        <th class="text-center"> Agregarle Certificado</th>

                                        <th class="text-center">
                                            Id Vehículo
                                        </th>
                                        <th class="text-center">
                                            Placas Vehiculo
                                        </th>
                                        <th class="text-center">
                                            Modelo
                                        </th>
                                        <th class="text-center">
                                            Marca
                                        </th>
                                        <th class="text-center">
                                            Configuración
                                        </th>
                                        <th class="text-center">
                                            Naturaleza Carga
                                        </th>
                                        <th class="text-center">
                                            Estado Mecánico
                                        </th>
                                        <th class="text-center">
                                            Estado Legal
                                        </th>
                                        <th class="text-center">
                                            Descripción
                                        </th>
                                        <th class="text-center">
                                            Fecha Ingreso
                                        </th>
                                        <th class="text-center">
                                            Fecha Modificación
                                        </th>
                                        <th class="text-center">
                                            Estado
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        int VehiculoId = item.VehiculoId;
                                        <tr>
                                            <td class="text-center align-middle">
                                                <i title="Eliminar Vehículo">
                                                    @Html.ActionLink("", "EliminarVehiculo", new { VehiculoId = VehiculoId }, new { @class = "fa fa-trash" })
                                                </i>
                                            </td>
                                            <td class="text-center align-middle">
                                                <a class="btn btn-primary" href="#" onclick="showInPopup('@Url.Action("AgregarCertificadoAlVehiculo", "Vehiculo", new { VehiculoId = VehiculoId }, Context.Request.Scheme)', 'Agregarle Certificado')">
                                                    <i class="fa fa-file-alt " title="Agregarle Certificado"></i>
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayFor(modelItem => item.VehiculoId)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayFor(modelItem => item.CodPlacas)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayFor(modelItem => item.Modelo)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayFor(modelItem => item.MarcaEmpresa)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayTextFor(modelItem => item.CodConfiguracion) - @Html.DisplayTextFor(modelItem => item.Configuracion)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayTextFor(modelItem => item.NaturalezaCarga)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayTextFor(modelItem => item.EstadoMecanico)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayTextFor(modelItem => item.EstadoLegal)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayTextFor(modelItem => item.FechaIng)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayTextFor(modelItem => item.FechaMod)
                                            </td>
                                            <td class="text-center">
                                                @Html.DisplayTextFor(modelItem => item.Estado)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>


                        }
                        else
                        {

                            <div class="card-body">
                                <div class="card border-info mb-12 text-center">
                                    <div class="card-body text-info">
                                        <h4 class="card-title">No se han registrado Vehículos en el momento </h4>

                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{

}
