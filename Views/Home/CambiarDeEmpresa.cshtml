<div class="row">
    <div class="col-md-12">

        <div class="form-row">
            <label class="control-label">Empresa Actual: &nbsp; @Context.Session.GetString("NombreEmpr").ToString().ToUpper()</label>

            <div class="form-group col-md-12">
                <label class="control-label">Empresa</label>
                <select id="EmpresaId" asp-items="@(new SelectList(ViewBag.Empresas, "EmpresaId", "NombreEmpr"))" class="form-control form-control-sm" required></select>
            </div>
        </div>

        <hr />
        <div class="form-group text-right">
            <input type="submit" value="Cambiar" class="btn btn-primary btn-sm" onclick="CambiarEmpresaPost()" />
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#EmpresaId').select2({ dropdownParent: $('#form-modal .modal-content') });

    });

    function CambiarEmpresaPost()
    {
        var EmpresaId = document.getElementById("EmpresaId").value;
        if (EmpresaId > 0) {
            var url = "/Home/CambiarEmpresaPost?empresaId=" + EmpresaId;
            window.location.assign(url)
        }
        else {
            alert("Debe seleccionar una Empresa");
        }

    }

</script>

